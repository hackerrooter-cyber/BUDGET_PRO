{
  "name": "budget-pro",
  "version": "1.0.0",
  "description": "Application de gestion de chantier packag√©e pour Windows via Electron.",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "package:win": "electron-builder --win nsis"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.budgetpro.desktop",
    "productName": "Budget Pro",
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
